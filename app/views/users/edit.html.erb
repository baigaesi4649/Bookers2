<h1>User info</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <h4>Name</h4>
  <%= f.text_field :title %>
  
   <h4>image</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>Introduction</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update User' %>
  
<% end %>